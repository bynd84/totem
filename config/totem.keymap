#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

#define BASE   0
#define wsad   1
#define wsad2    2
#define wsad3    3
#define wsad4    4
#define qwerty_digits    5
#define wsad_nav   6
#define fk   7
#define np    8
#define mouse    9
#define mouse2    10
#define mouse3    11
#define ZMK_POINTING_DEFAULT_MOVE_VAL 300  // default: 600
#define ZMK_POINTING_DEFAULT_SCRL_VAL 15    // default: 10

&mmv {
    time-to-max-speed-ms = <0>;
    acceleration-exponent = <0>;
};

&mt {
    quick-tap-ms = <0>;
    flavor = "tap-preferred";
    tapping-term-ms = <250>;
};

/ {
    combos {
        compatible = "zmk,combos";

        wsad_toggle {
            bindings = <&tog 1>;
            key-positions = <25 21>;
            layers = <0 1>;
        };

        numpad {
            bindings = <&tog 8>;
            key-positions = <6 8 7>;
            layers = <0 8>;
        };

        mouse {
            bindings = <&tog 9>;
            key-positions = <15 19>;
            layers = <9 0>;
        };

        toggle_left_nav {
            bindings = <&tog 6>;
            key-positions = <2 3 1>;
            layers = <0 6 1>;
        };

        st_numpad {
            bindings = <&sl 8>;
            key-positions = <6 8>;
            layers = <0>;
        };

        bs {
            bindings = <&kp BACKSPACE>;
            key-positions = <22 11>;
            layers = <0>;
        };

        ent {
            bindings = <&kp ENTER>;
            key-positions = <23 12>;
            layers = <0>;
        };

        esc {
            bindings = <&kp ESCAPE>;
            key-positions = <11 1>;
            layers = <0 1>;
        };

        mouse3 {
            bindings = <&tog 11>;
            key-positions = <10 14>;
            layers = <0 11 1>;
        };

        br_l {
            bindings = <&kp LEFT_BRACKET>;
            key-positions = <17 35>;
            layers = <0>;
        };

        br_r {
            bindings = <&kp RIGHT_BRACKET>;
            key-positions = <18 35>;
            layers = <0>;
        };

        quote {
            bindings = <&kp SINGLE_QUOTE>;
            key-positions = <29 18>;
            layers = <0>;
        };

        equal {
            bindings = <&kp EQUAL>;
            key-positions = <18 8>;
            layers = <0>;
        };

        minus {
            bindings = <&kp MINUS>;
            key-positions = <17 7>;
            layers = <0>;
        };

        l_brace {
            bindings = <&kp LS(N9)>;
            key-positions = <7 35>;
            layers = <0>;
        };

        r_brace {
            bindings = <&kp LS(N0)>;
            key-positions = <8 35>;
            layers = <0>;
        };

        st_nav {
            bindings = <&sl 6>;
            key-positions = <1 3>;
            layers = <0 1>;
        };

        st_fkeys {
            bindings = <&sl 7>;
            key-positions = <14 13>;
            layers = <0 1>;
        };
    };

    behaviors {
        wasd_nums: wasd_nums {
            compatible = "zmk,behavior-hold-tap";
            label = "WASD_NUMS";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            quick-tap-ms = <0>;
            tapping-term-ms = <250>;
            require-prior-idle-ms = <0>;
        };

        hl_mod: hl_mod {
            compatible = "zmk,behavior-hold-tap";
            label = "HL_MOD";
            bindings = <&mo>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <300>;
            quick-tap-ms = <0>;
            require-prior-idle-ms = <0>;
            flavor = "balanced";
        };

        layer_stlayer: layer_stlayer {
            compatible = "zmk,behavior-hold-tap";
            label = "LAYER_STLAYER";
            bindings = <&mo>, <&sl>;

            #binding-cells = <2>;
            quick-tap-ms = <0>;
            tapping-term-ms = <250>;
            require-prior-idle-ms = <0>;
        };

        kp_stlayer: kp_stlayer {
            compatible = "zmk,behavior-hold-tap";
            label = "KP_STLAYER";
            bindings = <&kp>, <&sl>;

            #binding-cells = <2>;
            quick-tap-ms = <0>;
            tapping-term-ms = <250>;
            require-prior-idle-ms = <0>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        // ▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄

        qwerty {
            // ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓

            label = "BASE";

            // ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
            //             ┏━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┓   ┏━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┓
            //             ┃     Q     ┃     W     ┃     F     ┃     P     ┃     G     ┃   ┃     J     ┃     L     ┃     U     ┃     Y     ┃     ;     ┃
            //             ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫
            //             ┃     A     ┃     R     ┃     S     ┃     T     ┃     D     ┃   ┃     H     ┃     N     ┃     E     ┃     I     ┃     O     ┃
            // ┏━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┓
            // ┃     Q     ┃     Z     ┃     X     ┃     C     ┃     V     ┃     B     ┃   ┃     K     ┃     M     ┃     ,     ┃     .     ┃     /     ┃     \     ┃
            // ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛
            //                                     ┃    DEL    ┃    TAB    ┃    SPC    ┃   ┃   ENTER   ┃           ┃   BSPC    ┃
            //                                     ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛   ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛

            bindings = <
                &kp Q  &kp W  &kp E  &kp R      &kp T        &kp Y      &kp U  &kp I      &kp O    &kp P
                &kp A  &kp S  &kp D  &kp F      &kp G        &kp H      &kp J  &kp K      &kp L    &kp SEMI
&mt LALT GRAVE  &kp Z  &kp X  &kp C  &kp V      &kp B        &kp N      &kp M  &kp COMMA  &kp DOT  &kp FSLH  &mt RIGHT_ALT BSLH
                              &mo 6  &kp LCTRL  &kp LSHFT    &kp SPACE  &mo 5  &none
            >;
        };

        wsad {
            bindings = <
           &kp TAB    &kp N1  &kp N2              &kp N3              &kp N4       &trans  &trans  &trans  &trans  &trans
           &kp LALT   &kp A   &kp W               &kp D               &kp F        &trans  &trans  &trans  &trans  &trans
&kp LSHFT  &kp LCTRL  &kp Q   &kp S               &kp E               &kp R        &trans  &trans  &trans  &trans  &trans  &trans
                              &layer_stlayer 6 4  &layer_stlayer 3 2  &kp SPACE    &trans  &trans  &trans
            >;

            label = "wsad";
        };

        wsad2 {
            label = "wsad2";
            bindings = <
           &kp P      &kp O    &kp I      &kp U  &kp Y    &trans  &trans  &trans  &trans  &trans
           &kp LALT   &kp L    &kp K      &kp J  &kp H    &trans  &trans  &trans  &trans  &trans
&kp LSHFT  &kp LCTRL  &kp DOT  &kp COMMA  &kp M  &kp N    &trans  &trans  &trans  &trans  &trans  &trans
                               &kp T      &kp G  &kp B    &trans  &trans  &trans
            >;
        };

        wsad3 {
            label = "wsad3";
            bindings = <
           &kp GRAVE  &kp N5  &kp N6  &kp N7     &kp N8       &trans  &trans  &trans  &trans  &trans
           &kp LALT   &kp N9  &kp N0  &kp MINUS  &kp EQUAL    &trans  &trans  &trans  &trans  &trans
&kp LSHFT  &kp LCTRL  &kp Z   &kp X   &kp C      &kp V        &trans  &trans  &trans  &trans  &trans  &trans
                              &trans  &trans     &trans       &trans  &trans  &trans
            >;
        };

        wsad4 {
            bindings = <
        &kp LGUI           &kp PRINTSCREEN  &kp SCROLLLOCK  &kp PAUSE_BREAK  &kp CLCK    &trans  &trans  &trans  &trans  &trans
        &kp C_VOLUME_UP    &kp APOS         &kp LBKT        &kp RBKT         &kp RGUI    &trans  &trans  &trans  &trans  &trans
&trans  &kp C_VOLUME_DOWN  &kp FSLH         &kp BSLH        &kp SEMI         &trans      &trans  &trans  &trans  &trans  &trans  &trans
                                            &trans          &trans           &trans      &trans  &trans  &trans
            >;

            label = "wsad4";
        };

        qwerty_digits {
            bindings = <
        &trans  &trans  &trans  &trans  &trans    &trans             &kp N7  &kp N8  &kp N9  &kp GRAVE
        &trans  &trans  &trans  &trans  &trans    &kp C_VOLUME_UP    &kp N4  &kp N5  &kp N6  &kp N0
&trans  &trans  &trans  &trans  &trans  &trans    &kp C_VOLUME_DOWN  &kp N1  &kp N2  &kp N3  &trans     &kp LGUI
                        &trans  &trans  &trans    &trans             &trans  &trans
            >;

            label = "qwerty_digits";
        };

        wsad_nav {
            label = "wsad_nav";
            bindings = <
           &kp TAB    &kp HOME        &kp DEL       &kp END          &kp PG_UP        &trans  &trans  &trans  &trans  &trans
           &kp LALT   &kp LEFT_ARROW  &kp UP_ARROW  &kp RIGHT_ARROW  &kp PAGE_DOWN    &trans  &trans  &trans  &trans  &trans
&kp LSHFT  &kp LCTRL  &kp ESC         &kp DOWN      &kp ENTER        &kp BSPC         &trans  &trans  &trans  &trans  &trans  &trans
                                      &mo 8         &mo 8            &kp INS          &trans  &trans  &trans
            >;
        };

        Fkeys {
            bindings = <
        &trans  &kp F7  &kp F8  &kp F9  &kp F10    &trans  &trans  &trans  &trans  &trans
        &trans  &kp F4  &kp F5  &kp F6  &kp F11    &trans  &trans  &trans  &trans  &trans
&trans  &trans  &kp F1  &kp F2  &kp F3  &kp F12    &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans     &trans  &trans  &trans
            >;

            label = "fk";
        };

        numpad {
            bindings = <
        &trans  &trans  &trans  &trans  &trans    &kp KP_DIVIDE    &kp KP_N7        &kp KP_N8  &kp KP_N9  &none
        &trans  &trans  &trans  &trans  &trans    &kp KP_MULTIPLY  &kp KP_NUMBER_4  &kp KP_N5  &kp KP_N6  &kp KP_NUMBER_0
&trans  &trans  &trans  &trans  &trans  &trans    &kp KP_MINUS     &kp KP_N1        &kp KP_N2  &kp KP_N3  &kp KP_PLUS      &kp KP_NUM
                        &trans  &trans  &trans    &kp KP_DOT       &kp KP_ENTER     &none
            >;

            label = "np";
        };

        mouse {
            bindings = <
        &trans  &trans  &trans  &trans  &trans    &trans             &mmv MOVE_X(-1500)  &mmv MOVE_Y(-1500)  &mmv MOVE_X(1500)  &trans
        &trans  &trans  &trans  &trans  &trans    &msc MOVE_Y(15)    &mmv MOVE_LEFT      &mmv MOVE_UP        &mmv MOVE_RIGHT    &kp C_VOLUME_UP
&trans  &trans  &trans  &trans  &trans  &trans    &msc MOVE_Y(-15)   &mkp LCLK           &mkp MCLK           &mkp RCLK          &kp C_VOL_DN     &trans
                        &trans  &trans  &trans    &mmv MOVE_Y(1500)  &mmv MOVE_DOWN      &mo 10
            >;

            label = "mouse";
        };

        mouse2 {
            label = "mouse2";
            bindings = <
        &trans  &trans  &trans  &trans  &trans    &trans          &trans            &trans            &trans           &trans
        &trans  &trans  &trans  &trans  &trans    &msc SCRL_UP    &mmv MOVE_X(-50)  &mmv MOVE_Y(-50)  &mmv MOVE_X(50)  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &msc SCRL_DOWN  &trans            &mmv MOVE_Y(50)   &trans           &trans  &trans
                        &trans  &trans  &trans    &trans          &trans            &trans
            >;
        };

        mouse3 {
            bindings = <
        &trans  &mmv MOVE_X(-1500)  &mmv MOVE_Y(-1500)  &mmv MOVE_X(1500)  &trans               &trans  &trans  &trans  &trans  &trans
        &trans  &mmv MOVE_LEFT      &mmv MOVE_UP        &mmv MOVE_RIGHT    &msc MOVE_Y(15)      &trans  &trans  &trans  &trans  &trans
&trans  &trans  &mkp RCLK           &mkp MCLK           &mkp LCLK          &msc MOVE_Y(-15)     &trans  &trans  &trans  &trans  &trans  &trans
                                    &none               &mmv MOVE_DOWN     &mmv MOVE_Y(1500)    &trans  &trans  &trans
            >;

            label = "mouse3";
        };
    };

    conditional_layers { compatible = "zmk,conditional-layers"; };
};
